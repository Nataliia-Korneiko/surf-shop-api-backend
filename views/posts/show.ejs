<h1>
  <%= post.title %>
</h1>
<div>Price: <%= post.price %>$
</div>
<div>
  <%= post.description %>
</div>
<div>
  <%= post.location %>
</div>
<div>
  <a href="/api/v1/posts/<%= post.id %>/edit">
    <button>Edit</button>
  </a>
</div>
<div>
  <form action="/api/v1/posts/<%= post.id %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete">
  </form>
</div>