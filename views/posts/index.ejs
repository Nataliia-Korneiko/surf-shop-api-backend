<% layout('layouts/boilerplate') -%>

<h1>Posts</h1>

<div class="container-fluid">
  <div class="row">
    <div class="col-4">
      <% include ../partials/searchFilter %>
    </div>
    <div class="col-8">
      <div id="map"></div>
    </div>
  </div>
</div>

<% include ../partials/paginate-posts %>

<% posts.docs.forEach(function(post) { %>
  <div>
    <h2><%= post.title %></h2>
    <div>Price: <%= post.price %>$</div>
    <div>Description: <%= post.description %></div>
    <div><%= post.location %></div>
    <div><a href="/api/v1/posts/<%= post.id %>">View more</a></div>
  </div>
<% }); %>

<% include ../partials/paginate-posts %>

<script>
	mapboxgl.accessToken = "<%= mapBoxToken %>";
	const posts = { features: <%- JSON.stringify(posts.docs) %> };
</script>
<script src="/javascripts/posts-cluster-map.js"></script>